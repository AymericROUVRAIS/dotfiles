# Close App 
super + c
  bspc node -c

# Force close App
super + shift + c
	bspc node -k


# Kill desktop
super + alt + Escape
	bspc quit

# Terminal (alacritty)
super + Return
	alacritty

# Terminal (in the same desktop)
super + shift + Return
  alacritty --class "AlacrittyOverride"

# Quit/Restart bspwm
ctrl + shift + {q,r}
	bspc {quit,wm -r}
	
# Reload Keybindings
super + Escape
	pkill -x sxhkd; sxhkd &
# can also use : pkill -USR1 -x sxhkd




##---------- Rofi Launcher & Menus ----------##

# Rofi App Launcher
alt + F1
	rofi -show run

# Rofi Powermenu
super + x
 ~/.local/bin/powermenu.sh

# Rofi Windows
super + Tab
  rofi -show window


##---------- Applications ----------##

# Launch Apps
super + shift + {e,f}
	{thunar,firefox}

# Terminal Apps
ctrl + alt + {r,h}
	alacritty --class "AlacrittyOverrideUtils" -e {ranger,htop}

# Lockscreen
ctrl + alt + l
    betterlockscreen --lock

# Screenshot
super + shift + s
  flameshot gui


##---------- System Keys ----------##

# Brighness control
XF86MonBrightness{Up,Down}
  .local/bin/brightness_change.sh {up,down}
	
# Speaker Volume control
XF86Audio{Raise,Lower}Volume
  .local/bin/volumev2.sh {up,down}

# Mic Volume control
XF86AudioMute
  .local/bin/volumev2.sh mute

# Music control
XF86Audio{Next,Prev,Play,Stop}
	playerctl {next,previous,play-pause,stop}


super + space
    playerctl play-pause

# Next track
super + shift + n
    playerctl next

# Previous track
super + shift + p
    playerctl previous



##---------- Bspwm controls ----------##

# Hide/Unhide Window
super + shift + h
	bspwinmask

# Go to last workspace
super + twosuperior
	bspc desktop -f last

# Switch workspace or Send focused Node to another workspace
# {1-8} = {ampersand,eacute,quotedbl,...}
super + {_,shift + }{ampersand,eacute,quotedbl,apostrophe,parenleft,minus,egrave,underscore}
	bspc {desktop -f,node -d} '^{1-8}' '--follow'


## Switch directionally ##
# Switch workspace
ctrl + alt + {Left,Right}
	bspc desktop -f {prev.local,next.local}

# Send focused Node
super + ctrl + {Left,Right}
	bspc node -d {prev,next} '--follow'


## Window management ##
# Change focus to next window, including floating window
alt + {_,shift + }Tab
	bspc node -f {next.local,prev.local}

# Change focus of the Node or Swap Nodes
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# Move floating windows
super + alt + shift + {Left,Down,Up,Right}
	bspc node -v {-20 0, -20 0,0 20, 0 -20}

# Expand windows
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# Contract windows
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# Split horizontal, vertical or cancel
super + {h,v,q}
	bspc node -p {east,south,cancel}

# Cancel preselection / ratio
super + ctrl + 0
  bspc node -p cancel

# Preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}




## ------------ Layout --------------- ##

# Toggle Layout (Tiled/Monocle)
super + l
	bspc desktop -l next

# Toggle Fullscreen
super + f
    bspc node -t "~"fullscreen

# Toggle beetwen floating & tiled
super + space
    bspc node -t "~"{floating,tiled}

# Pseudo Tiled & tiled mode
super + shift + space
    bspc node -t "~"{pseudo_tiled,tiled}

# Set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}
